<%- include("../partial/header.ejs") %>
<h2 class="page-header">Search Books</h2>
<form action="/mybrary/books" method="get">
    <div class="form-row">
        <div class="form-item">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" value="<%= searchOptions.title %>">
        </div>
    </div>
    <div class="form-row">
        <div class="form-item">
            <label for="publishedAfter">Published After</label>
            <input type="date" id="publishedAfter" name="publishedAfter" value="<%= searchOptions.publishedAfter %>">
        </div>
        <div class="form-item">
            <label for="publishedBefore">Published Before</label>
            <input type="date" id="publishedBefore" name="publishedBefore" value="<%= searchOptions.publishedBefore %>">
        </div>
    </div>
    <div class="form-row form-row-end">
        <input class="button" type="submit" value="Search">
    </div>
    
</form>
<br>
<div class="book-grid">
    <% books.forEach(book => { %>
        <div>
            <a href="/mybrary/books/<%= book.id %>">
                <img class="book-cover" src="<%= book.coverimagepath %>" alt="Book Cover">
            </a>
            <br>
            <%= book.title %>              
        </div>
    <% }) %>
</div>
<%- include("../partial/footer.ejs") %>