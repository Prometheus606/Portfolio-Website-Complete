<%- include("./layouts/header.ejs") %>
<!--==================== PORTFOLIO ====================-->
<section class="portfolio section" id="portfolio">

    <h2 class="section__title"><%= locals.__("pages").portfolio.title %></h2>
    <span class="section__subtitle"><%= locals.__("pages").portfolio.subtitle %></span>

    <div class="portfolio__container container swiper swiper-container">
        <div class="swiper-wrapper">

            <!--==================== PORTFOLIO PROJECTS ====================-->
            <% locals.__("pages").portfolio.projects.forEach(element => { %>
                
                <div class="portfolio__content grid swiper-slide">
                    <img src=<%= element.image %> alt="" class="portfolio__img">
    
                    <div class="portfolio_">
                        <h3 class="portfolio__title"><%= element.title %></h3>
                        <p class="portfolio__description"><%= element.description %></p>
                        <a href="<%= element.buttonAction %>" target="_blank" class="button button--flex button--small portfolio__button">
                            <%= locals.__("pages").portfolio.demo_button_text %>
                            <i class="uil uil-arrow-right button__icon"></i>
                        </a>
                    </div>
                </div>  
            <% }); %>

        </div>

        <!-- add arrows-->
        <div class="swiper-button-next">
            <i class="uil uil-angle-right-b swiper-portfolio-icon"></i>
        </div>

        <div class="swiper-button-prev">
            <i class="uil uil-angle-left-b swiper-portfolio-icon"></i>
        </div>

        <!-- Add Pagination -->
        <div class="swiper-pagination"></div>

    </div>

</section>

