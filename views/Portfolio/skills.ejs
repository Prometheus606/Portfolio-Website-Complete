<%- include("./layouts/header.ejs") %>
<!--==================== SKILLS ====================-->
<section class="skills section" id="skills">
    <h2 class="section__title"><%= locals.__("pages").skills.title %></h2>
    <span class="section__subtitle"><%= locals.__("pages").skills.subtitle %></span>

    <div class="skills__container container grid">
        <div>
            <% locals.__("pages").skills.tree.forEach(tree => { %>
                <% if (!locals.isFirstItem) { %>
                    <div class="skills__content skills__open">
                    <% locals.isFirstItem = true %>
                <% } else { %>
                    <div class="skills__content skills__close">
                <% } %>
                    <div class="skills__header">
                        <i class="uil skills__icon <%= tree.icon %>"></i>
                       <div>
                           <h1 class="skills__title"><%= tree.title %></h1>
                           <span class="skills__subtitle"><%= tree.subtitle %></span>
                       </div>
    
                       <i class="uil uil-angle-down skills__arrow"></i>
                    </div>
                    <% tree.skill.forEach(skill => { %>
                    <div class="skills__list grid">
                        <div class="skills__data">
                            <div class="skills__titles">
                                <h3 class="skills__name"><%= skill.title %></h3>
                                <span class="skills__number"><%= skill.value %>%</span>
                            </div>
                            <div class="skills__bar">
                                <span class="skills__percentage" style="width: <%= skill.value %>%;"></span>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            <% }) %>
        </div>

        <div>
        </div>
    </div>
</section>
<%- include("./layouts/footer.ejs") %>